  "shortcuts": [
    {
      "name": "Novo Evento",
      "short_name": "Evento",
      "description": "Registrar evento de segurança",
      "url": "/#form-evento",
      "icons": [
        {
          "src": "assets/shortcut-evento.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Avisos",
      "short_name": "Avisos",
      "description": "Ver avisos importantes",
      "url": "/#avisos",
      "icons": [
        {
          "src": "assets/shortcut-avisos.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard Gestor",
      "short_name": "Gestor",
      "description": "Acesso rápido ao painel",
      "url": "/#gestor-dashboard",
      "icons": [
        {
          "src": "assets/shortcut-gestor.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link"
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+qssma",
      "url": "/?protocol=%s"
    }
  ],
  
  "launch_handler": {
    "client_mode": "auto"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "permissions": [
    "notifications",
    "geolocation",
    "camera",
    "microphone",
    "clipboard-write"
  ],
  
  "handle_links": "preferred",
  
  "id": "/?source=pwa",
  
  "scope_extensions": [
    {
      "origin": "https://portal-qssma.firebaseapp.com"
    },
    {
      "origin": "https://portal-qssma.web.app"
    }
  ],
  
  "capture_links": "new-client",
  
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif"],
        "application/pdf": [".pdf"],
        "text/plain": [".txt"]
      }
    }
  ]
}
